<Window x:Class="CarService.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService.Views"
        mc:Ignorable="d"
        Title="Вход в систему" Height="500" Width="500" Background="PaleTurquoise">
    <StackPanel VerticalAlignment="Center" Height="480">
        <Image Source="logo.jpg" Margin="0 15 0 10" Width="200" Height="200" RenderTransformOrigin="0.5,0.5">
            <Image.Clip>
                <RectangleGeometry RadiusX="50" RadiusY="50" Rect="0 0 200 200"/>
            </Image.Clip>
        </Image>
        <Label Content="Логин:" Margin="0 20 0 0" Width="350" FontFamily="Bold" FontSize="18" />
        <TextBox Name="Login" Width="350" Margin="0 0 0 0"/>
        <Label Content="PIN-Код:" Margin="0 10 0 0" Width="350" FontFamily="Bold" FontSize="18"/>
        <PasswordBox Name="PIN" Width="350" Margin="0 0 0 0"/>
        <Button Click="login" Content="Вход" Margin="25" Height="45" Width="200" FontSize="22" Cursor="Hand" IsDefault="True" />
    </StackPanel>
</Window>
